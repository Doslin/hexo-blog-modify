.sidebar {
  box-shadow: 0 2px 10px #333;
  left: 0;
  background: $black-sidebar;
  /*min-height: 15em;
    transition: .5s cubic-bezier(.3, 0, .3, 1.6);
    padding: 5pt 10pt;*/
  opacity: 0.98;
}

.sidebar a {
  &:hover {
    color: $grey-light;
  }
}

.sidebar-inner {
  display: none;
}

.sidebar-background {
  position: absolute;
  background-image: url('/images/silderbackground.jpg');
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  transition: opacity 1s;
  opacity: 0;
}

.sidebar-toggle {
  right: 0px;
  left: 50px;
  width: 15px;
  height: 15px;
  padding-bottom: 3px;
  background: $black-sidebar;
}

.post-toc .nav .nav-child {
  display: block;
}

@import sidebar-author;